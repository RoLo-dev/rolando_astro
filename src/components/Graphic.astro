---
import Img1 from '../assets/images/img1.svg'
import Img2 from '../assets/images/img2.webp'
---

<section>
    <div class="graphics-container wrapper">
        <h2>GRAPHIC WORK</h2>

        <div class="gallery-container">
            <figure>
                <img loading="lazy" src={Img1.src} alt="artwork image">
            </figure>
            <figure>
                <img loading="lazy" src={Img2.src} alt="artwork image">
            </figure>
        </div>
    </div>
</section>

<style>
    .gallery-container{
		display: grid;
		gap: 10px;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		grid-auto-rows: 300px;
		grid-auto-flow: dense;
	}
	.gallery-container .wide{
		grid-column: span 2;
	}
	.gallery-container .tall{
		grid-row: span 2;
	}
	.gallery-container .big{
		grid-row: span 2;
		grid-column: span 2;
	}
    figure{
		cursor: pointer;
		overflow: hidden;
	}
	figure img{
		transition: all 0.2s ease-in-out;
	}
	figure img:hover {
		transform: scale(1.1);
	}
    .lightbox{
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.8);
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}
	.lightbox-img{
		max-width: 90%;
		max-height: 80%;
		border-radius: 8px;
	}
	.lightbox button{
		background: transparent;
		border: 0;
	}
	.lightbox-close-btn{
		position: absolute;
		top: 20px;
		right: 30px;
		font-size: 40px;
		color: white;
	}
	.prev, .next {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		font-size: 40px;
		color: white;
		padding: 10px;
		user-select: none;
		transition: color 0.2s ease-in-out;
	}
	.prev{left: 25px;}
	.next{right: 25px;}
</style>