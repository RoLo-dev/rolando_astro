---
import headerLogo from '../assets/images/RL_logo2018.svg';
// import headerLogo from '../assets/images/RL_favicon-2018.png';
---


<header id="header">
    <div class="header-container wrapper">
        <a href="#" class="logo" title="logo" aria-label="Rolando Lopantzi logo">
             ROLANDO<br />LOPANTZI
        </a>

        <nav class="header-nav">
            <ul>
                <li>
                    <a href="" title="Web" aria-label="Web section link">WEB</a>
                </li>
                <li>
                    <a href="" title="Graphics" aria-label="Graphics section link">GRAPHICS</a>
                </li>
                <li>
                    <a href="" title="About" aria-label="About section link">ABOUT</a>
                </li>
                <li>
                    <a href="" title="Contact" aria-label="Contact section link">CONTACT</a>
                </li>
            </ul>

            <div class="header-social-icons mobile-only">
                <a href="" title="Email" aria-label="Email link"><i class="fa-regular fa-envelope"></i></a>
                <a href="" title="LinkedIn" aria-label="Linkedin link"><i class="fa-brands fa-linkedin"></i></a>
                <a href="" title="Github" aria-label="Github link"><i class="fa-brands fa-github"></i></a>
            </div>
        </nav>

        <div class="header-social-icons desktop-only">
            <a href="" title="Email" aria-label="Email link"><i class="fa-regular fa-envelope"></i></a>
            <a href="" title="LinkedIn" aria-label="Linkedin link"><i class="fa-brands fa-linkedin"></i></a>
            <a href="" title="Github" aria-label="Github link"><i class="fa-brands fa-github"></i></a>
        </div>

        <button tabindex="0" class="mobile-only hamburger-btn">
            <span class="hamburger-icon"></span>
        </button>
    </div>
</header>

<style>
    header{
        padding: 1.25rem 0;
        background-color: var(--charcoal);
        position: fixed;
        top: 0;
        left: 0;
        right: auto;
        width: 100%;
        z-index: 10;
    }
    .header-container{
        display: flex;
        align-items: center;
    }
     .logo{
        color: var(--oatmeal);
        font-family: "Oswald", sans-serif;
        font-weight: 900;
        font-size: 1.25rem;
        margin-right: 7rem;
        letter-spacing: 1.25px;
        line-height: 1.15;
     }
    .header-nav ul li{
        display: inline-block;
        margin-right: 2rem;
        font-weight: 500;
    }
    .header-nav ul li:last-child{margin-right: 0;}
    .header-nav ul li a{
        color: var(--oatmeal);
        font-size: 1.125rem;
        letter-spacing: 1px;
    }
    .header-social-icons{
        margin-left: auto;
        margin-right: 0;
        display: flex;
        gap: 0 1.5rem;
    }
    .header-social-icons a{
        color: var(--oatmeal);
        font-size: 1.5rem;
    }

    @media screen and (min-width: 1100px){
        .mobile-only{display: none;}
    }
    @media screen and (min-width: 922px){
        .header-nav ul li a:hover,
        .header-social-icons a:hover{color: var(--fruit-punch);}
    }
    @media screen and (max-width: 1099px){
        .desktop-only{display: none;}
        .header-container{justify-content: space-between;}
        .hamburger-btn{
            border: 0;
            display: block;
            padding: 1.125rem 5px;
            background: transparent;
        }
        .hamburger-icon{
            display: block;
            position: relative;
            pointer-events: none;
        }
        .hamburger-icon, .hamburger-icon:before, .hamburger-icon:after {
            width: 2.25rem;
            height: 2px;
            background: var(--oatmeal);
            border-radius: 30px;
            transition: all 0.3s ease-in-out;
        }
        .hamburger-icon{width: 1.5rem;}
        .hamburger-icon::before,
        .hamburger-icon::after{ content: '';position: absolute;left: -5px; }
        .hamburger-icon::before{bottom: 9px;}
        .hamburger-icon::after{top: 9px;}
        .animate{ background-color: transparent; }
        .animate::before{ bottom:0px;transform: rotate(45deg); }
        .animate::after{ transform: rotate(135deg) translate(-7px, 6px); }
        .header-nav{
            position: fixed;
            width: 100%;
            padding: 4rem 0;
            right: 0;
            top: 76px;
            text-align: center;
            transform: translate(100%, 0px);
            border-radius: 0 0 10px 10px;
            background-color: rgba(31, 31, 31, 0.95);
            transition: all 0.3s ease-in-out;
            z-index: 11;
            /* box-shadow: rgba(17, 17, 26, 0.1) 0px 1px 0px; */
        }
        .header-nav.show-nav{
            transform: translateY(0px);
        }
        .header-nav ul{
            display: flex;
            flex-direction: column;
            gap: 1.5rem 0;
        }
        .header-nav ul li{margin-right: 0;}
        .header-nav ul li a{font-size: 1.75rem;}
        .header-social-icons{
            margin-right: auto;
            justify-content: center;
            margin-top: 3.125rem;
        }
        .header-social-icons a{font-size: 2.125rem;}
    }
    @media (max-width: 921px) {
        .header-nav ul li a:active,
        .header-social-icons a:active{color: var(--fruit-punch);}
    }
</style>

<script>
    const nav = document.querySelector('.header-nav')

    let mobileNav = document.querySelector('.header-nav');
    let hamburgerBtn = document.querySelector('.hamburger-btn');
    let hamburgerIcon = document.querySelector('.hamburger-icon')

    hamburgerBtn?.addEventListener('click', toggleNav)

    function toggleNav(){
        mobileNav?.classList.toggle('show-nav');
        hamburgerIcon?.classList.toggle('animate');
    }
</script>